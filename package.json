{
  "name": "@dmitrijkiltau/dom.js",
  "version": "1.0.0",
  "description": "A lightweight, modular DOM manipulation library with chainable API, zero dependencies, and modern ES modules.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitrijkiltau/dom.js.git"
  },
  "homepage": "https://github.com/dmitrijkiltau/dom.js#readme",
  "bugs": {
    "url": "https://github.com/dmitrijkiltau/dom.js/issues"
  },
  "author": {
    "name": "Dmitrij Kiltau",
    "email": "dmitrij.kiltau@gmail.com",
    "url": "https://github.com/dmitrijkiltau"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "import": "./dist/http.js",
      "require": "./dist/http.cjs"
    },
    "./template": {
      "types": "./dist/template.d.ts",
      "import": "./dist/template.js",
      "require": "./dist/template.cjs"
    },
    "./forms": {
      "types": "./dist/forms.d.ts",
      "import": "./dist/forms.js",
      "require": "./dist/forms.cjs"
    },
    "./motion": {
      "types": "./dist/motion.d.ts",
      "import": "./dist/motion.js",
      "require": "./dist/motion.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/core.ts src/http.ts src/template.ts src/forms.ts src/motion.ts --format esm,cjs --dts --minify --sourcemap",
    "build:full": "npm run build",
    "build:core": "tsup src/core.ts --format esm,cjs --dts --minify --sourcemap",
    "analyze": "node scripts/analyze-bundles.mjs",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "node ./tests/sanity.mjs && node ./tests/modular.mjs",
    "test:core": "node ./tests/sanity.mjs",
    "test:modular": "node ./tests/modular.mjs",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "docs:install": "cd docs && npm install"
  },
  "keywords": [
    "dom",
    "utility",
    "chainable",
    "dom.js",
    "modular",
    "lightweight",
    "esm",
    "typescript",
    "browser",
    "frontend",
    "jquery-alternative",
    "vanilla-js"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/dmitrijkiltau"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
