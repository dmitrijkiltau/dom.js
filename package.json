{
  "name": "@klt/dom-js",
  "version": "1.6.37",
  "description": "A lightweight, modular DOM manipulation library with chainable API, zero dependencies, and modern ES modules.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitrijkiltau/@klt/dom-js.git"
  },
  "homepage": "https://github.com/dmitrijkiltau/@klt/dom-js#readme",
  "bugs": {
    "url": "https://github.com/dmitrijkiltau/@klt/dom-js/issues"
  },
  "author": "Dmitrij Kiltau <info@kiltau.com> (https://github.com/dmitrijkiltau)",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "import": "./dist/http.js",
      "require": "./dist/http.cjs"
    },
    "./template": {
      "types": "./dist/template.d.ts",
      "import": "./dist/template.js",
      "require": "./dist/template.cjs"
    },
    "./forms": {
      "types": "./dist/forms.d.ts",
      "import": "./dist/forms.js",
      "require": "./dist/forms.cjs"
    },
    "./motion": {
      "types": "./dist/motion.d.ts",
      "import": "./dist/motion.js",
      "require": "./dist/motion.cjs"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./observers": {
      "types": "./dist/observers.d.ts",
      "import": "./dist/observers.js",
      "require": "./dist/observers.cjs"
    },
    "./scroll": {
      "types": "./dist/scroll.d.ts",
      "import": "./dist/scroll.js",
      "require": "./dist/scroll.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "ARCHITECTURE.md",
    "REFERENCE.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/core.ts src/http.ts src/template.ts src/forms.ts src/motion.ts src/utils.ts src/observers.ts src/scroll.ts src/server.ts --format esm,cjs --dts --minify --splitting false --clean",
    "build:full": "npm run build",
    "build:core": "tsup src/core.ts --format esm,cjs --dts --minify",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "dev:all": "tsup src/index.ts src/core.ts src/http.ts src/template.ts src/forms.ts src/motion.ts src/utils.ts src/observers.ts src/scroll.ts src/server.ts --format esm,cjs --dts --watch",
    "test": "npm run build && vitest run",
    "test:dist": "npm run build && vitest run",
    "test:src": "TEST_TARGET=src vitest run",
    "test:watch": "TEST_TARGET=src vitest --watch",
    "test:types": "tsc -p tests/tsconfig.types.json",
    "test:core": "vitest run --tests tests/sanity.test.mjs",
    "test:modular": "vitest run --tests tests/modular.test.mjs",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "docs:install": "cd docs && npm install"
  },
  "keywords": [
    "dom",
    "utility",
    "chainable",
    "@klt/dom-js",
    "modular",
    "lightweight",
    "esm",
    "typescript",
    "browser",
    "frontend",
    "jquery-alternative",
    "vanilla-js"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/dmitrijkiltau"
  },
  "devDependencies": {
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
