{
  "name": "@dmitrijkiltau/dom.js",
  "version": "0.2.0",
  "description": "A tiny, intuitive, chainable DOM utility for modern browsers (like jQuery, but ESM and no $).",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --minify --sourcemap",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "node ./tests/sanity.mjs",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "docs:install": "cd docs && npm install"
  },
  "keywords": [
    "dom",
    "utility",
    "chainable",
    "dom.js",
    "jquery-alternative"
  ],
  "author": "Dmitrij Kiltau",
  "license": "MIT",
  "devDependencies": {
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
